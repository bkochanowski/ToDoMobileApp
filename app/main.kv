# kivy 2.0.0.
#: import icon kivy.garden.iconfonts.icon
#: import NavigationDrawer kivy.garden.navigationdrawer.NavigationDrawer
#: import mtx kivy.metrics
#: import DatePicker datepicker.datepicker.DatePicker

<MainWindow>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

# left side navigation menu
    NavigationDrawer
        id: nav
        anim_type: 'slide_above_simple'
        side_panel_width: .55*self.width
        BoxLayout:
            id: sidenav
            orientation: 'vertical'
            padding: mtx.dp(5)
            canvas.before:
                Color:
                    rgba: 1,1,1,.2
                Rectangle:
                    pos: self.pos
                    size: self.size
            ListEntry:
                text: '%s   zamknij'%icon('zmdi-apps', 28)
                markup: True
                color: 1,1,1,1
                background_color: 1,1,1,.1
                halign: 'justify'
                size_hint_y: .1
                on_release:
                    nav.toggle_state()
            ListEntry:
                text: '%s Dodaj zadanie'% icon('zmdi-calendar-note', 26)
                markup: True
                color: 1,1,1,1
                size_hint_y: .1
                on_release:
                    nav.toggle_state()
                    app.root.add_new(self)
            ListEntry:
                text: '%s Dodaj do zakupów'%icon('zmdi-shopping-cart-plus', 28)
                markup: True
                color: 1,1,1,1
                size_hint_y: .1
                on_release:
                    nav.toggle_state()
                    app.root.add_new_item()
            Widget:
                size_hint_y: .8

# main menu starts here
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                id: menu_bar
            	size_hint_y: .1
            	canvas.before:
            		Color:
            			rgba: 0, .45,0,.8
            		Rectangle:
            			pos: self.pos
            			size: self.size
                padding: 15,5,5,5
                MenuButton:
                    text: icon('zmdi-menu')
                    size_hint_x: .4
                    markup: True
                    text_size: self.size
                    font_size: mtx.sp(24)
                    valign: 'middle'
                    halign: 'left'
                    on_release: nav.toggle_state()
                Widget:
                BoxLayout:
                    halign: 'right'
                    MenuButton:
                        id: tsk_btn
                        text: icon('zmdi-assignment-check', 30)
						markup: True
						align: 'center'
						color: 1,1,1,1
						background_color: 0, .35,0,.8
                        on_press:
                            app.animate_menu_widget(self)
                            app.root.highlight_tasks()
                        on_release: root.ids.scrn_mngr.current = 'task_scrn'
                    MenuButton:
                        id: shp_btn
                        text: icon('zmdi-shopping-cart', 30)
						markup: True
						color: 1,1,1,.6
						background_color: 0, .35,0,.8
                        on_press:
                            app.animate_menu_widget(self)
                            app.root.highlight_shopping()
                        on_release:
                            root.ids.scrn_mngr.current = 'shop_scrn'

# Screen display part of window
            ScreenManager:
                id: scrn_mngr
                Screen:
                    name: 'task_scrn'
                    BoxLayout:
                        orientation: 'vertical'
                        canvas.before:
                            Color:
                                rgba: 1,1,1,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        BoxLayout:
                            size_hint_y: .9
                            orientation: 'vertical'
                            BoxLayout:
                                size_hint_y: .1
                                padding: [10,0]
                                Label:
                                    text: 'NADCHODZĄCE ZADANIA'
                                    font_size: mtx.sp(14)
                                    bold: True
                                    size_hint_x: .5
                                    color: 0,0,0,1
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'center'
                            BoxLayout:
                                size_hint_y: .6
                                id: scroll_parent
                                ScrollView:
                                    id: sv_upcoming
                                    do_scroll: [True, False]
                                    scroll_type: ['content']
                                    size_hint_y: None
                                    height: self.parent.height
                                    effect_cls: 'OpacityScrollEffect'
									bar_height:'5dp'
                                    GridLayout:
                                        id: upcoming_wrapper
                                        rows: 1
                                        padding: ['10dp', '10dp','10dp', '20dp']
                                        spacing: mtx.dp(20)
                                        size: self.minimum_size
                                        size_hint: [None, None]

                        Widget:
                            size_hint_y: .10

                Screen:
                    name: 'shop_scrn'
                    BoxLayout:
                        orientation: 'vertical'
                        canvas.before:
                            Color:
                                rgba: 1,1,1,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        BoxLayout:
                            size_hint_y: .12
                            padding: [10,0]
                            Label:
                                text: 'DO KUPIENIA'
                                font_size: mtx.sp(14)
                                bold: True
                                color: 0,0,0,1
                                text_size: self.size
                                halign: 'left'
                                valign: 'center'
                        BoxLayout:
                            size_hint_y: .88
                            padding: '20dp'
                            id: scroll_item_parent
                            ScrollView:
                                id: sv_shopping
                                size_hint_y: None
                                height: self.parent.height
                                effect_cls: 'OpacityScrollEffect'
                                GridLayout:
                                    id: shopping_wrapper
                                    cols: 1
                                    size_hint_y: None
                                    size: self.minimum_size
                                    padding: '10sp'
                                    spacing: '10sp'
                    CircleButton:
                        id: cta
                        text: '%s'%(icon('zmdi-plus',40))

<NewTask>:
	size_hint: [.8,.7]
	BoxLayout:
		orientation: 'vertical'
		spacing: '12dp'
		padding: '10dp'
		canvas.before:
			Color:
				rgba: 1,1,1,1
			RoundedRectangle:
				pos: self.pos
				size: self.size
				radius: [7]
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: .15
			padding: '4dp'
			Label:
				text: 'Tytuł:'
				color: 0,0,0,1
				size_hint_x: .2
			FlatInput:
				id: task_name
				hint_text: 'Wpisz nazwę zadania'
				hint_text_color: 1,1,1,1
				write_tab: False
				multiline: False
				size_hint_x: .7
				size_hint_y: .85
		BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .3
            padding: '4dp'
            Label:
                text: 'Opis:'
                color: 0,0,0,1
                size_hint_x: .2
                halign: 'left'
            TextInput:
                id: task_details
                size_hint_x: .8
                size_hint_y: .7
                hint_text: 'Wpisz szczegóły zadania'
                hint_text_color: 0,0,0,.7
		Widget:
			size_hint_y: .1
		BoxLayout:
			id: datetime
			size_hint_y: .12
			padding: '4dp'
			DatePicker:
				id: task_date
				size_hint_x: .5
#				background_active: ''
#				background_normal: ''
#				background_color: 1,1,1,0
#				canvas.before:
#					Color:
#						rgba: [1,0,0,.7]
#					Rectangle:
#						pos: self.pos
#						size: [self.size[0], 1]
			Button:
				id: task_time
#				text: 'czas 00:00'
				text: '%s 00:00'%icon('zmdi-time-countdown')
                markup: True
				color: 0,0,0,1
				background_color: 0,.3,0,.4
				size_hint_x: .5
				on_release: root.get_time()
        BoxLayout:
		    id: submit_wrapper
		    size_hint_y: .2
            MenuButton:
                text: 'Zapisz'
                bold: True
                on_release: app.root.add_task(root, (task_name, task_details, task_date, task_time))
                canvas.before:
                    Color:
                        rgba: 0,.3,0,.7
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size

<Task>:
    orientation: 'vertical'
	padding: mtx.dp(15)
    canvas.before:
        Color:
            rgba: [0, 0, .5, .35]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
    Label:
        id: task_name
        text: root.name
		bold: True
		font_size: mtx.sp(20)
        size_hint_y: .1
        color: 0,0,0,1
		text_size: self.size
		shorten: True
		shorten_from: 'right'
		halign: 'left'
	BoxLayout:
		size_hint_y: .1
		Label:
			text: icon('zmdi-time-countdown')
			markup: True
			size_hint_y: .55
			size_hint_x: .15
			color: 1,1,1,.9
			halign: 'left'
		Label:
			id: task_time
			text: root.time
			size_hint_y: .50
			text_size: self.size
			color: 1,1,1,.9
			halign: 'left'
		Label:
			text: root.date
			size_hint_y: .5
			text_size: self.size
			color: 1,1,1,.9
	Label:
		size_hint_y: .38
        id: task_details
        text: root.details
        color: 0,0,0,1
        font_size: mtx.sp(18)
		halign: 'left'
		valign: 'middle'
        multiline: True
        text_size: self.size
    BoxLayout:
    	size_hint_y: .3
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            size_hint_y: .3
            MenuButton:
                text: '%s edycja'%icon('zmdi-refresh')
                markup: True
                color: 0,0,.8,.7
                bold: True
                underline: True
                on_release: app.root.get_update_task(root)
            MenuButton:
                text: icon('zmdi-delete')
                markup: True
                font_size: '24sp'
                size_hint_x: .3
                color: 1,1,1,1
                on_release: app.root.delete_task(root)
<NewItem>:
	size_hint: [.8,.7]
	BoxLayout:
		orientation: 'vertical'
		spacing: '12dp'
		padding: '10dp'
		canvas.before:
			Color:
				rgba: 1,1,1,1
			RoundedRectangle:
				pos: self.pos
				size: self.size
				radius: [7]
		Label:
			size_hint_y: .2
			text: 'Dodaj produkt do listy zakupów'
			bold: True
			color: 0,0,0,1
			font_size: mtx.sp(12)
			halign: 'center'
			valign: 'middle'
		BoxLayout:
			size_hint_y: .3
			padding: '4dp'
			TextInput:
				id: shopping_item
				hint_text: 'Wpisz produkt \n do kupienia tutaj'
				font_size: mtx.sp(18)
				halign: 'center'
				hint_text_color: 0,0,0,.7
				multiline: False
		Widget:
			size_hint_y: .35
		MenuButton:
			text: 'Zapisz'
			bold: True
			size_hint_y: .15
			canvas.before:
				Color:
					rgba: 0,.3,0,.7
				RoundedRectangle:
					pos: self.pos
					size: self.size
            on_release: app.root.add_item(root, shopping_item)
<ItemToBuy>
    BoxLayout:
        id: my_root
        orientation: 'horizontal'
        padding: mtx.dp(15)
        canvas.before:
            Color:
                rgba:  0,0,.7,.7
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10]
        CheckBox:
            valign: 'middle'
            size_hint_x: .1
            color: [1,1,1,.9]
#            canvas.before:
#                Color:
#                    rgba: 1,1,1,1
#                Rectangle:
#                    size: self.size
#                    pos: self.pos
        Label:
            id: shopping_item
            text: root.name
            font_size: mtx.sp(18)
            text_size: (my_root.width - .35 * my_root.width), None
            size: self.texture_size
            valign: 'middle'
            multiline: True
            color: 1,1,1,1


        MenuButton:
            text: icon('zmdi-delete')
            markup: True
            font_size: '24sp'
            size_hint_x: .15
            color: 1,1,1,1
            on_release: app.root.delete_item(root)

<ListEntry@MenuButton>:
	text_size: self.size
	valign: 'middle'
	halign: 'left'


<NewButton>:
    id: no_tasks
	canvas.before:
		Color:
			rgba: [0, 0, 0, .15]
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [20]
	Label:
		text: icon('zmdi-plus')
		font_size: mtx.sp(58)
		markup: True

<MenuButton@Button>:
    background_normal: ''
    background_color: 1,1,1,0

<FlatInput@TextInput>:
	background_active: ''
	background_normal: ''
	background_color: 1,1,1,0
	canvas.before:
		Color:
			rgba: [0,0,0,.7]
		Rectangle:
			pos: self.pos
			size: [self.size[0], 2]

<CircleButton@AnchorLayout>:
	id: add_button
	size_hint: (None, None)
	text: ''
	btn_size: (mtx.dp(60),mtx.dp(60))
	size: (mtx.dp(60),mtx.dp(60))
	btn_color: (0,0,.7,1)
	pos_hint: {"x":.7, 'y': .05}
	Button:
		text: add_button.text
		markup: True
		size_hint: (None, None)
		size: add_button.btn_size
		background_normal: ''
		background_color: (0,0,0,0)
		canvas.before:
			Color:
				rgba: add_button.btn_color
			Ellipse:
				pos: self.pos
				size: self.size
		on_press:
		    app.root.pulsating_button(self)
        on_release:
            app.root.add_new_item()

