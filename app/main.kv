<ListEntry@MenuButton>:
	text_size: self.size
	valign: 'middle'
	canvas.before:
		Color:
			rgba: 0,0,.7,1
		Rectangle:
			pos: self.pos
			size: [self.size[0], mtx.dp(1)]

<NewButton>:
	canvas.before:
		Color:
			rgba: [0, 0, 0, .15]
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [20]
	Label:
		text: icon('zmdi-plus')
		font_size: mtx.sp(58)
		markup: True

<MenuButton@Button>:
    background_normal: ''
    background_color: 1,1,1,0

<FlatInput@TextInput>:
	background_active: ''
	background_normal: ''
	background_color: 1,1,1,0
	canvas.before:
		Color:
			rgba: [0,0,0,.7]
		Rectangle:
			pos: self.pos
			size: [self.size[0], 2]