# kivy 2.0.0.
#: import icon kivy.garden.iconfonts.icon
#: import NavigationDrawer kivy.garden.navigationdrawer.NavigationDrawer
#: import mtx kivy.metrics
#: import DatePicker datepicker.datepicker.DatePicker

<MainWindow>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size

# left side navigation menu
    NavigationDrawer
        id: nav
        anim_type: 'slide_above_simple'
        side_panel_width: .5*self.width
        BoxLayout:
            id: sidenav
            orientation: 'vertical'
            padding: mtx.dp(5)
            canvas.before:
                Color:
                    rgba: 1,1,1,.2
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                size_hint_y: .07
                canvas:
                    Color:
                        rgba: 0, .4,0,.8
                    Rectangle:
                        pos: self.pos
                        size: self.size
				MenuButton:
					text: icon('zmdi-apps', 28)
					markup: True
					color: 1,1,1,1
					halign: 'left'
					on_release:
						nav.toggle_state()
				Widget:
            ListEntry:
                text: '%s   Dodaj zadanie'%icon('zmdi-edit', 28)
                markup: True
                color: 1,1,1,1
                size_hint_y: .1
                on_press:
                    app.animate_widget(self)
                on_release:
                    nav.toggle_state()
                    app.root.add_new()
            Widget:
                size_hint_y: .8

# main menu starts here
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                id: menu_bar
            	size_hint_y: .1
            	canvas.before:
            		Color:
            			rgba: 0, .45,0,.8
            		Rectangle:
            			pos: self.pos
            			size: self.size
                padding: 15,5,5,5
                MenuButton:
                    text: icon('zmdi-menu')
                    size_hint_x: .4
                    markup: True
                    text_size: self.size
                    font_size: mtx.sp(24)
                    valign: 'middle'
                    halign: 'left'
                    on_release: nav.toggle_state()
                Widget:
                BoxLayout:
                    halign: 'right'
                    Button:
                        text: icon('zmdi-assignment-check', 30)
						markup: True
						align: 'center'
						color: 1,1,1,1
                        on_press:
                            app.animate_widget(self)
                        on_release: root.ids.scrn_mngr.current = 'task_scrn'
                    Button:
                        text: icon('zmdi-shopping-cart', 30)
						markup: True
						color: 1,1,1,1
                        on_press:
                            app.animate_widget(self)
                        on_release: root.ids.scrn_mngr.current = 'shop_scrn'

# Screen display part of window
            ScreenManager:
                id: scrn_mngr
                Screen:
                    name: 'task_scrn'
                    BoxLayout:
                        orientation: 'vertical'
                        canvas.before:
                            Color:
                                rgba: 1,1,1,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        BoxLayout:
                            size_hint_y: .9
                            orientation: 'vertical'
                            BoxLayout:
                                size_hint_y: .1
                                padding: [10,0]
                                Label:
                                    text: 'NADCHODZĄCE ZADANIA'
                                    font_size: mtx.sp(14)
                                    bold: True
                                    size_hint_x: .5
                                    color: 0,0,0,1
                                    text_size: self.size
                                    halign: 'left'
                                    valign: 'center'
                            BoxLayout:
                                size_hint_y: .6
                                id: scroll_parent
                                ScrollView:
                                    id: sv_upcoming
                                    do_scroll: [True, False]
                                    scroll_type: ['content']
                                    size_hint_y: None
                                    height: self.parent.height
                                    effect_cls: 'OpacityScrollEffect'
									bar_height:'5dp'
                                    GridLayout:
                                        id: upcoming_wrapper
                                        rows: 1
                                        padding: ['10dp', '10dp','10dp', '20dp']
                                        spacing: mtx.dp(20)
                                        size: self.minimum_size
                                        size_hint: [None, None]
                                        NewButton:
                                            on_release: app.root.add_new()
                                            size_hint: [None,None]
                                            size: [scroll_parent.width/1.5, scroll_parent.height-(.050*scroll_parent.height)]
                        Widget:
                            size_hint_y: .10

                Screen:
                    name: 'shop_scrn'
                    BoxLayout:
                        orientation: 'vertical'
                        canvas.before:
                            Color:
                                rgba: 1,1,1,1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        BoxLayout:
                            size_hint_y: .12
                            padding: [10,0]
                            Label:
                                text: 'DO KUPIENIA'
                                font_size: mtx.sp(14)
                                bold: True
                                color: 0,0,0,1
                                text_size: self.size
                                halign: 'left'
                                valign: 'center'
                        BoxLayout:
                            size_hint_y: .8
                            padding: '20dp'
                            ScrollView:
                                id: sv_shopping
                                size_hint_y: None
                                height: self.parent.height
                                effect_cls: 'OpacityScrollEffect'
                                GridLayout:
                                    id: shopping
                                    cols: 1
                                    size_hint_y: None
                                    size: self.minimum_size
                                    padding: '10sp'
                                    spacing: '10sp'
                                    ItemToBuy:
                                        item: 'jajka'
                                        size_hint: [1,None]
                                        size: [1, mtx.dp(70)]
                                    ItemToBuy:
                                        item: 'mleko'
                                        size_hint: [1,None]
                                        size: [1, mtx.dp(70)]
                                    ItemToBuy:
                                        item: 'chleb'
                                        size_hint: [1,None]
                                        size: [1, mtx.dp(70)]
                                    ItemToBuy:
                                        item: 'kawa'
                                        size_hint: [1,None]
                                        size: [1, mtx.dp(70)]
                        CircleButton:
                            id: cta
                            text: '%s'%(icon('zmdi-plus',40))
                            size_hint_y: .2

<NewTask>:
	size_hint: [.8,.7]
	BoxLayout:
		orientation: 'vertical'
		spacing: '12dp'
		padding: '10dp'
		canvas.before:
			Color:
				rgba: 1,1,1,1
			RoundedRectangle:
				pos: self.pos
				size: self.size
				radius: [7]
		BoxLayout:
			size_hint_y: .15
			padding: '4dp'
			FlatInput:
				id: task_name
				hint_text: 'Wpisz nazwę zadania'
				hint_text_color: 1,1,1,1
				write_tab: False
				multiline: False
		BoxLayout:
            size_hint_y: .15
            padding: '4dp'
            FlatInput:
                id: task_details
                hint_text: 'Wpisz szczegóły zadania'
                hint_text_color: 1,1,1,1
		Widget:
			size_hint_y: .1
		BoxLayout:
			id: datetime
			size_hint_y: .12
			padding: '4dp'
			DatePicker:
				id: task_date
				size_hint_x: .5
#				background_active: ''
#				background_normal: ''
#				background_color: 1,1,1,0
#				canvas.before:
#					Color:
#						rgba: [1,0,0,.7]
#					Rectangle:
#						pos: self.pos
#						size: [self.size[0], 1]
			MenuButton:
				id: task_time
				text: '00:00:00'
				color: 0,0,0,1
				size_hint_x: .5
				on_release: root.get_time()
		Widget:
			size_hint_y: .2
		MenuButton:
			text: 'Zapisz'
			bold: True
			size_hint_y: .2
			on_release: app.root.add_task(root, (task_name, task_details, task_date, task_time))
			canvas.before:
				Color:
					rgba: 0,.3,0,.7
				RoundedRectangle:
					pos: self.pos
					size: self.size


<Task>:
    orientation: 'vertical'
	padding: mtx.dp(15)
    canvas.before:
        Color:
            rgba: [0, 0, .5, .35]
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
    Label:
        id: task_name
        text: root.name
		bold: True
		font_size: mtx.sp(20)
        size_hint_y: .1
        color: 0,0,0,1
		text_size: None, self.texture_size[1]
		size: self.size
		shorten: True
		shorten_from: 'right'
		halign: 'left'
	BoxLayout:
		size_hint_y: .07
		Label:
			text: icon('zmdi-time-countdown')
			markup: True
			size_hint_y: .8
			size_hint_x: .15
			color: 1,1,1,.9
			halign: 'left'
		Label:
			id: task_time
			text: root.time
			size_hint_y: .80
			text_size: self.size
			color: 1,1,1,.9
			halign: 'left'
	Label:
		size_hint_y: .38
        id: task_details
        text: root.details
        color: 0,0,0,1
        font_size: mtx.sp(12)
		halign: 'left'
		valign: 'middle'
        multiline: True
#        text_size: None, self.texture_size[1]
#        size: self.size
    BoxLayout:
    	size_hint_y: .3
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            size_hint_y: .3
            MenuButton:
                text: icon('zmdi-delete')
                markup: True
                font_size: '24sp'
                size_hint_x: .3
                color: 1,1,1,1
                on_release: app.root.delete_task(root)

<ItemToBuy>
    BoxLayout:
        orientation: 'horizontal'
        padding: mtx.dp(15)
        canvas.before:
            Color:
                rgba:  0,0,.7,.7
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10]
        Label:
            id: shopping_item
            text: root.item
            bold: True
            font_size: mtx.sp(20)
            valign: 'middle'
            color: 1,1,1,1
            text_size: None, self.texture_size[1]
            size: self.size
        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'bottom'
            valign: 'middle'
            MenuButton:
                text: icon('zmdi-delete')
                markup: True
                font_size: '24sp'
                size_hint_x: .3
                color: 1,1,1,1

<ListEntry@MenuButton>:
	text_size: self.size
	valign: 'middle'
	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: [self.size[0], mtx.dp(1)]


<NewButton>:
    id: no_tasks
	canvas.before:
		Color:
			rgba: [0, 0, 0, .15]
		RoundedRectangle:
			pos: self.pos
			size: self.size
			radius: [20]
	Label:
		text: icon('zmdi-plus')
		font_size: mtx.sp(58)
		markup: True

<MenuButton@Button>:
    background_normal: ''
    background_color: 1,1,1,0

<FlatInput@TextInput>:
	background_active: ''
	background_normal: ''
	background_color: 1,1,1,0
	canvas.before:
		Color:
			rgba: [0,0,0,.7]
		Rectangle:
			pos: self.pos
			size: [self.size[0], 2]

<CircleButton@AnchorLayout>:
	id: add_button
	size_hint: (None, None)
	text: ''
	btn_size: (mtx.dp(60),mtx.dp(60))
	size: (mtx.dp(60),mtx.dp(60))
	btn_color: (0,0,.7,1)
	pos_hint: {"x":.7,}
	Button:
		text: add_button.text
		markup: True
		size_hint: (None, None)
		size: add_button.btn_size
		background_normal: ''
		background_color: (0,0,0,0)
		canvas.before:
			Color:
				rgba: add_button.btn_color
			Ellipse:
				pos: self.pos
				size: self.size

