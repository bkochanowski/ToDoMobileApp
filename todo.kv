# kivy 2.0.0.

<MainScreen>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            pos: self.pos
            size: self.size

    MainMenu_ActionBar:
        id: ActionBar

    Carousel:
        direction: "right"

        WelcomeScreen:
            id: 'Welcome'

        ActiveTasks:
            id: 'Tasks'
            FloatButton:

        ShoppingList:
            id: 'Shopping'
            FloatButton:


<MainMenu_ActionBar@ActionBar>:
    pos_hint: {'left' :1}
    background_color: 0, .7, 0, .7
    ActionView:
        id: ActionView

        ActionPrevious:
            title: 'To-Do App'
            with_previous: False
            width: len(self.title) * 10

        ActionGroup:
            id: App_ActionGroup
            mode: 'spinner'
            text: 'Menu'
            ActionButton:
                text: 'Main page'


            ActionButton:
                text: 'Tasks'

            ActionButton:
                text: 'Shopping\nlist'

            ActionButton:
                text: 'Quit'
                on_press: app.get_running_app().stop()

<FloatButton@FloatLayout>
    id: float_root
    size_hint: (None, None)
    text: ('[b]+[/b]')

    btn_size: (70,70)
    size: (60,60)
    bg_color:  0, .25, 0, 1
    pos_hint: {"x": .65, 'y': 0.05}
    Button:
        text: float_root.text
        font_size: 0.6 * self.height
        markup: True
        size_hint: (None, None)
        size: float_root.btn_size
        pos_hint: {"x": .8, "y": .1}
        background_normal: ''
        background_color: (0,0,0,0)
        canvas.before:
            Color:
                rgba: float_root.bg_color
            Ellipse:
                size: self.size
                pos: self.pos

<WelcomeScreen>:
    id: 'welcome'
    Label:
        text: 'Ekran powitalny'
        font_size: 50

<ActiveTasks>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Zadania do zrobienia'
            font_size: 50

<ShoppingList>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Zakupy do zrobienia'
            font_size: 50
